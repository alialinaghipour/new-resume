@model List<GetFeedbacksViewModel>

<div class="section">
    <h2 class="title title--h2">مشتریان می گویند</h2>
    <div class="swiper-container js-carousel-review">
        <div class="swiper-wrapper">
            
            @foreach (var feedback in Model)
            {
                <div class="swiper-slide review-item">
                    <svg class="avatar avatar--80" viewBox="0 0 84 84">
                        <g class="avatar__hexagon">
                            <image xlink:href="@(feedback.Avatar.IsBlank() ? FilePaths.DefaultAvatar : $"{FilePaths.FeedbackAvatar}{feedback.Avatar}")"
                                   height="100%" width="100%">
                            </image>
                        </g>
                    </svg>
                    <h4 class="title title--h3">@feedback.Name</h4>
                    <p class="review-item__caption">@feedback.Description</p>
                </div>
            }
            
        </div>

        <div class="swiper-pagination"></div>
    </div>
</div>